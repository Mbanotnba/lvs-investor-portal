# LVS Portal Backend - Environment Variables
# Copy this file to .env and fill in your values

# Security - IMPORTANT: Generate a strong random key for production
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-in-production

# Database
# For SQLite (default): sqlite+aiosqlite:///./lvs_portal.db
# For PostgreSQL: postgresql://user:password@localhost/lvs_portal
DATABASE_URL=sqlite+aiosqlite:///./lvs_portal.db

# CORS Origins (comma-separated for multiple)
# CORS_ORIGINS=http://localhost:8000,http://localhost:3000

# Environment
ENVIRONMENT=development
DEBUG=true

# ============================================================================
# DEMO USER SEEDING (Development/Testing Only)
# ============================================================================
# WARNING: Only enable these in development/testing environments!
# NEVER enable demo user seeding in production.

# Set to "true" to enable demo user creation on database initialization
# Default: false (demo users are NOT created)
SEED_DEMO_USERS=false

# Demo user passwords - REQUIRED if SEED_DEMO_USERS=true
# Generate secure passwords: python -c "import secrets; print(secrets.token_urlsafe(16))"
# DEMO_FOUNDER_PASSWORD=your-secure-founder-password
# DEMO_INVESTOR_PASSWORD=your-secure-investor-password
# DEMO_CUSTOMER_PASSWORD=your-secure-customer-password
# DEMO_PARTNER_PASSWORD=your-secure-partner-password

# ============================================================================
# PRODUCTION USER SEEDING (Auto-creates all users on startup)
# ============================================================================
# Set this prefix to enable automatic production user creation.
# Passwords are generated as: {PREFIX}{FirstName}
# Example: If prefix is "LVS2026", Kevin's password is "LVS2026Kevin"
#
# When set, all founders, investors, and customers are auto-created on startup.
# Safe to run multiple times - existing users are skipped.
USER_PASSWORD_PREFIX=LVS2026
